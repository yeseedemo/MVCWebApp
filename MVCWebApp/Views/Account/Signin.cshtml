            @Html.EditorFor(model => model.upw, new { htmlAttributes = new { @class = "form-control" } }) <!-- 資料輸入欄位 -->
            @Html.ValidationMessageFor(model => model.upw, "", new { @class = "text-danger" }) <!-- 警告訊息 -->
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.repw, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- 標題 -->
        <div class="col-md-10">
            @Html.EditorFor(model => model.repw, new { htmlAttributes = new { @class = "form-control" } }) <!-- 資料輸入欄位 -->
            @Html.ValidationMessageFor(model => model.repw, "", new { @class = "text-danger" }) <!-- 警告訊息 -->
        </div>
    </div>

