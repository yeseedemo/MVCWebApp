@model MVCWebApp.Models.ACCOUNT

@{
    ViewBag.Title = "Sign in";
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form style="margin-left:10px;" method="post" action="">
    <!-- 使用post 傳遞使用者帳密-->
    <h1>請輸入使用者資料</h1>

    <div>
        <span style="color:red">@ViewBag.Msg</span>  <!-- 錯誤提示用的 -->
    </div>
    <!-- 帳號 -->
    <div class="form-group">
        @Html.LabelFor(model => model.uid, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- 標題 -->
        <div class="col-md-10">
            @Html.EditorFor(model => model.uid, new { htmlAttributes = new { @class = "form-control" } }) <!-- 資料輸入欄位 -->
            @Html.ValidationMessageFor(model => model.uid, "", new { @class = "text-danger" }) <!-- 警告訊息 -->
        </div>
    </div>
    <!-- eamil -->
    <div class="form-group">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- 標題 -->
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } }) <!-- 資料輸入欄位 -->
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" }) <!-- 警告訊息 -->
        </div>
    </div>
    <!-- 第一次密碼 -->
    <div class="form-group">
        @Html.LabelFor(model => model.upw, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- 標題 -->
        <div class="col-md-10">
            @Html.EditorFor(model => model.upw, new { htmlAttributes = new { @class = "form-control" } }) <!-- 資料輸入欄位 -->
            @Html.ValidationMessageFor(model => model.upw, "", new { @class = "text-danger" }) <!-- 警告訊息 -->
        </div>
    </div>
    <!-- 第二次密碼 -->
    <div class="form-group">
        @Html.LabelFor(model => model.repw, htmlAttributes: new { @class = "control-label col-md-2" }) <!-- 標題 -->
        <div class="col-md-10">
            @Html.EditorFor(model => model.repw, new { htmlAttributes = new { @class = "form-control" } }) <!-- 資料輸入欄位 -->
            @Html.ValidationMessageFor(model => model.repw, "", new { @class = "text-danger" }) <!-- 警告訊息 -->
        </div>
    </div>
    <button type="submit" class="btn btn-primary">確定</button>
    <button type="reset" class="btn btn-warning">清除</button>
</form>

